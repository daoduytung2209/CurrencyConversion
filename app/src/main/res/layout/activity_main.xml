<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.duytungdao.unitconverter.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="14dp"
        android:weightSum="3">

        <EditText
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/hint_text"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textSize="24sp" />
        <Spinner
            android:id="@+id/currency_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <TableLayout
            android:id="@+id/display_conversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>

                <TextView
                    android:id="@+id/aud_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/aud"
                    android:text="AUD"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/cad_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/cad"
                    android:text="CAD"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/chf_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/chf"
                    android:text="CHF"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/eur_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/eur"
                    android:text="EUR"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/gbp_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/gbp"
                    android:text="GBP"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/hkd_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/hkd"
                    android:drawablePadding="6dp"
                    android:text="HKD"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/jpy_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/jpy"
                    android:text="JPY"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/nzd_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/nzd"
                    android:text="NZD"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/sgd_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/sgd"
                    android:text="SGD"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/usd_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/usd"
                    android:text="USD"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/setting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:src="@drawable/ic_floating_button" />
</LinearLayout>
